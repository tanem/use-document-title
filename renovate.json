{
  "extends": [
    "config:js-lib",
    ":rebaseStalePrs",
    ":automergeAll",
    ":label(internal)",
    ":masterIssue",
    ":enableVulnerabilityAlerts"
  ],
  "ignorePaths": ["**/node_modules/**"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "depTypeList": ["dependencies"],
      "rangeStrategy": "bump"
    },
    // TODO (Tane): Drop this once https://github.com/rollup/plugins/issues/1371 is fixed.
    {
      "matchPackageNames": [
        "@rollup/plugin-terser"
      ],
      "allowedVersions": "0.1.0"
    },
  ],
  "prCreation": "not-pending",
  "stabilityDays": 3
}
